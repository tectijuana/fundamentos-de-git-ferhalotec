#include <iostream>  
using namespace std;
int main()
{
    int i, operacion = 1, numero;
    cout << "Introduzca numero: ";
    cin >> numero;
    for (i = 1;i <= numero;i++) {
        operacion = operacion * i;
    }
    cout << "El factorial de " << numero << " es: " << operacion << endl;
    return 0;
}