#include <iostream>
#include <cstdlib>

using namespace std;

int main() {

    float prod = 0, sum = 0;
    int i, n;
    cout << "Introduzca el valor de n " << endl;
    cin >> n;
    for (i = 0; i <= n; i++) {
        if (i == 1)
        {
            prod = 1;
        }
        prod = pow(2, i);
        sum += prod;
    }
    cout << "La suma de la serie es " << sum;
    return 0;
}